{
  "name": "logia-genesis",
  "version": "1.0.0",
  "description": "Logia Genesis - Switching Evolved | Thoughtful Innovations",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "find-place-id": "dotenv -e .env -- node scripts/find-place-id.js",
    "fetch-reviews": "dotenv -e .env -- node scripts/fetch-google-reviews.js && node scripts/sync-reviews-to-public.js",
    "fetch-instagram": "dotenv -e .env -- node scripts/fetch-instagram-posts.js && node scripts/sync-instagram-to-public.js",
    "download-instagram-images": "node scripts/download-instagram-images.js && node scripts/sync-instagram-to-public.js",
    "sync-instagram-to-public": "node scripts/sync-instagram-to-public.js",
    "build": "npm run fetch-reviews && npm run fetch-instagram && vite build --mode production",
    "build:gh-pages": "npm run fetch-reviews && npm run fetch-instagram && vite build --mode gh-pages",
    "build:all": "npm run fetch-reviews && npm run fetch-instagram && npm run build && npm run build:gh-pages",
    "preview": "vite preview",
    "preview:gh-pages": "vite preview --outDir dist-gh-pages",
    "serve": "vite preview",
    "setup-fonts": "node scripts/setup-local-fonts.js"
  },
  "keywords": [
    "business-technology",
    "wireless-networking",
    "surveillance",
    "web-development"
  ],
  "author": "Logia Genesis",
  "license": "UNLICENSED",
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0",
    "dotenv-cli": "^11.0.0",
    "rollup-plugin-visualizer": "^6.0.5",
    "sharp": "^0.34.5",
    "vite": "^5.0.0",
    "vite-imagetools": "^9.0.2",
    "vite-plugin-compression": "^0.5.1"
  },
  "dependencies": {
    "@sentry/browser": "^8.0.0",
    "alpinejs": "^3.13.0",
    "web-vitals": "^4.0.0"
  }
}
